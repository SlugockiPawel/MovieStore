@using MovieStore.Models.ViewModels
@model LandingPageVM
@{
    ViewData["Title"] = "Movie Store";
}

<style>
    .clampOverview {
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .clampTitle {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: -moz-hidden-unscrollable;
    }

    h5.card-title { height: 3.5rem; }
</style>

<section class="">
    <div class="row">
        <span class="btn btn-lg btn-block btn-warning font-weight-bolder border-dark">UPCOMING</span>
    </div>
    <div class="row">
        <div class="carousel slide" data-ride="carousel">
            <div class="carousel-inner card-group">
                @{
                    var classText = "active";

                    @for (var slide = 0; slide <= 3; slide++)
                    {
                        <div class="carousel-item @classText">

                            <div class="row card-group">
                                @foreach (var movie in Model.Upcoming.results.Skip(slide * 4).Take(4))
                                {
                                    <div class="col-sm-6 col-md-3 mb-2">
                                        <div class="card" style="width: 100%;">
                                            <img src="@movie.poster_path" class="card-img-top img-fluid" alt="@movie.title poster"/>
                                            <div class="card-body">
                                                <h5 class="card-title clampTitle  pb-3">@movie.title</h5>
                                                <p class="card-text clampOverview mt-3">@movie.overview</p>
                                            </div>
                                                                           
                                            <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.id" class="btn btn-lg btn-block btn-warning font-weight-bold">Details</a>
                                                                            
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        classText = "";
                    }
                }
            </div>
        </div>
    </div>
</section>

